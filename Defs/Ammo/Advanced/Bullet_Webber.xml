<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingCategoryDef>
      <defName>AmmoWebber</defName>
      <label>Webber charge</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_Webber</defName>
    <label>Webber charge</label>
    <ammoTypes>
      <Ammo_LasGun>Bullet_LasGun</Ammo_LasGun>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

  <ThingDef Name="WebberBase" ParentName="AmmoBase" Abstract="True">
    <description>Webber ammo</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoWebber</li>
    </thingCategories>
  </ThingDef>

  <ThingDef ParentName="WebberBase">
    <defName>Ammo_Webber</defName>
    <label>Webber cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/Charged/Regular</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>Charged</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

  <ThingDef Name="WebberGun" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/IGCore/Projectile/WebProjectile</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <projectile>
      <damageDef>IGWebbed</damageDef>
      <speed>50</speed>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseWebber">
    <defName>Bullet_Webber</defName>
    <label>Webber net</label>
    <projectile>
      <damageAmountBase>10</damageAmountBase>
	  <explosionRadius>0.01</explosionRadius>
	  <flyOverhead>true</flyOverhead>
	  <soundExplode>IGElectricShock</soundExplode>
      <armorPenetration>0.45</armorPenetration>
    </projectile>
  </ThingDef>
	
  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeAmmo_Webber</defName>
    <label>make Webber cartridge x100</label>
    <description>Craft 100 Webber cartridges.</description>
    <jobString>Making Webber cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Component</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plasteel</li>
        <li>Component</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_Webber>100</Ammo_Webber>
    </products>
	<researchPrerequisite>WRWebber</researchPrerequisite>
  </RecipeDef>
	
</Defs>
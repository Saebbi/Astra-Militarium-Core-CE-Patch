<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingCategoryDef>
      <defName>AmmoExitusSniper</defName>
      <label>Exitus Sniper ammo</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_ExitusSniper</defName>
    <label>Exitus Sniper ammo</label>
    <ammoTypes>
      <Ammo_ExitusSniper>Bullet_ExitusSniper</Ammo_ExitusSniper>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

  <ThingDef Name="ExitusSniperBase" ParentName="AmmoBase" Abstract="True">
    <description>ExitusSniper ammo</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoExitusSniper</li>
    </thingCategories>
  </ThingDef>

  <ThingDef ParentName="ExitusSniperBase">
    <defName>Ammo_ExitusSniper</defName>
    <label>Exitus Sniper cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/HighCaliber/HE</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>FullMetalJacket</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

  <ThingDef Name="BaseExitusSniper" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/IGCore/Projectile/QXIGBoltShotSml</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>IGBullet</damageDef>
      <speed>200</speed>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseExitusSniper">
    <defName>Bullet_ExitusSniper</defName>
    <label>Exitus Sniper bullet</label>
    <projectile>
      <damageAmountBase>90</damageAmountBase>
      <armorPenetration>3.0</armorPenetration>
    </projectile>
  </ThingDef>
	
  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeAmmo_ExitusSniper</defName>
    <label>make Exitus Sniper cartridge x60</label>
    <description>Craft 60 Exitus Sniper cartridges.</description>
    <jobString>Making Exitus Sniper cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Component</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plasteel</li>
        <li>Component</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_ExitusSniper>60</Ammo_ExitusSniper>
    </products>
	<researchPrerequisite>WRExitusSniper</researchPrerequisite>
  </RecipeDef>
	
</Defs>
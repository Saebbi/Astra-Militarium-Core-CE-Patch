<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingCategoryDef>
      <defName>AmmoAssCan</defName>
      <label>Assault Cannon ammo</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_AssCan</defName>
    <label>Assault Cannon ammo</label>
    <ammoTypes>
      <Ammo_AssCan>Bullet_AssCan</Ammo_AssCan>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

  <ThingDef Name="AssCanBase" ParentName="AmmoBase" Abstract="True">
    <description>Assault Cannon ammo</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoAssCan</li>
    </thingCategories>
  </ThingDef>

  <ThingDef ParentName="AssCanBase">
    <defName>Ammo_AssCan</defName>
    <label>Assault Cannon cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/HighCaliber/HE</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>FullMetalJacket</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

  <ThingDef Name="BaseAssCan" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/IGCore/Projectile/AssCanMED</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>IGBullet</damageDef>
      <speed>125</speed>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseAssCan">
    <defName>Bullet_AssCan</defName>
    <label>Assault Cannon bullet</label>
    <projectile>
      <damageAmountBase>10</damageAmountBase>
      <armorPenetration>0.9</armorPenetration>
    </projectile>
  </ThingDef>
	
  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeAmmo_AssCan</defName>
    <label>make Assault Cannon cartridge x500</label>
    <description>Craft 500 Assault Cannon cartridges.</description>
    <jobString>Making Assault Cannon cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Component</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plasteel</li>
        <li>Component</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_AssCan>500</Ammo_AssCan>
    </products>
	<researchPrerequisite>IG_RES_AssCannon</researchPrerequisite>
  </RecipeDef>
	
</Defs>
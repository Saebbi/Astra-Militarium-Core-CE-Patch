<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingCategoryDef>
      <defName>AmmoT2BoltGun</defName>
      <label>BoltGun ammo</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_T2BoltGun</defName>
    <label>T2BoltGun ammo</label>
    <ammoTypes>
      <Ammo_T2BoltGun>Bullet_T2BoltGun</Ammo_T2BoltGun>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

  <ThingDef Name="T2BoltGunBase" ParentName="AmmoBase" Abstract="True">
    <description>T2BoltGun ammo</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoT2BoltGun</li>
    </thingCategories>
  </ThingDef>

  <ThingDef ParentName="T2BoltGunBase">
    <defName>Ammo_T2BoltGun</defName>
    <label>T2BoltGun cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/HighCaliber/HE</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>FullMetalJacket</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

  <ThingDef Name="BaseT2BoltGun" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/IGCore/Projectile/BoltProjectileMk2-MED</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>IGBomb</damageDef>
      <speed>100</speed>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseT2BoltGun">
    <defName>Bullet_T2BoltGun</defName>
    <label>T2BoltGun bullet</label>
	<thingClass>CombatExtended.ProjectileCE_Explosive</thingClass>
    <projectile>
      <damageAmountBase>35</damageAmountBase>
      <armorPenetration>1.2</armorPenetration>
	  <explosionRadius>1.5</explosionRadius>
	  <soundExplode>IGSML_Explosion</soundExplode>
    </projectile>
  </ThingDef>
	
  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeAmmo_T2BoltGun</defName>
    <label>make T2BoltGun cartridge x90</label>
    <description>Craft 90 T2BoltGun cartridges.</description>
    <jobString>Making T2BoltGun cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Component</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plasteel</li>
        <li>Component</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_T2BoltGun>90</Ammo_T2BoltGun>
    </products>
	<researchPrerequisite>WRBoltGun</researchPrerequisite>
  </RecipeDef>
	
</Defs>